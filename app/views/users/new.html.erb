<div id="signup" class="container edit-container">
	<div class="row">
		<div class="heading col-md-4 col-md-offset-4">
			<h1>Sign Up</h1>
			<p><em>Already have a persona? </em><a href="/signin" class="login">Log in here</a></p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<%= form_for(@user) do |f| %>
				<%= render 'shared/error_messages', object: f.object %>

				<div class="row">
					<div class="col-sm-12">
					  <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
					  <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
					</div>
				</div>
				<div class="row">
					<div class="col-sm-12">
					  <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
					  <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control" %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-12 col">
						<div class="button-container row">
							<div class="col-xs-6"><%= f.submit "Create", class: "save button" %></div>
							<div class="col-xs-6"><%= link_to 'Cancel', '/main/index', class: "cancel button" %></div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>