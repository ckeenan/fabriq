<div id="signup" class="container edit-container">
	<div class="row">
		<div class="heading col-md-4 col-md-offset-4">
			<h1>Sign Up</h1>
			<p><em>Already have a persona? </em><a href="/signin" class="login">Log in here</a></p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="row">
				<div class="col-sm-12 col">
					<div class="signup button-container">
						<div class="result">
						</div>
						<dl>
							<dt>
								username
							</dt>
							<dd>
							<%= tag "input", {"id"=> "name", "type" => "text" } %>
							</dd>
							<dt>
								email
							</dt>
							<dd>
								<%= tag "input", {"id"=> "email", "type" => "text"} %>
							</dd>
							<dt>
								password
							</dt>
							<dd>
								<%= tag "input", {"id"=> "password1", "type" => "password"} %>
							</dd>
							<dt>
								confirm password
							</dt>
							<dd>
								<%= tag "input", {"id"=> "password2", "type" => "password"} %>
							</dd>
						</dl>
						<%= tag "input", {"id"=> "register", "type" => "button", "value"=>"Create", "class"=>"save button"} %>
						<%= link_to 'Cancel', '/main/index', class: "cancel button" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
