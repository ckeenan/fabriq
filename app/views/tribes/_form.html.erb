
<%= form_for(@tribe) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<div class="row">
		<div class="col-sm-12">
		  <%= f.label :name %>
		  <%= f.text_field :name, class: "form-control" %>
		  <%= f.label "Description" %>
		  <%= f.text_field :desc, class: "form-control" %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12 col">
			<div class="button-container">
				<%= f.submit "Create", class: "save button" %>
				<%= link_to 'Cancel', '/main/index', class: "cancel button" %>
			</div>
		</div>
	</div>
<% end %>