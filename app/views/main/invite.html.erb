<div id="invite">
	<div class="container">
		<div class="row">
			<div class="heading col-md-8 col-md-offset-2">
				<h1>Invite</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-md-8 col-md-offset-2">
				<img style="display: block; width: 400px; margin: auto;" src="/assets/qrcode.png" />
			</div>
		</div>
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<%= form_for(@invite) do |f| %>
					<div class="row">
						<div class="col-sm-12">
							<%= f.label :email %>
							<%= f.text_field :email, class: "form-control" %>
						</div>
					</div>
					<div class="row">
						<div class="button-container">
							<%= f.submit "Send Invite", class: "save button" %>
						</div>
					</div>

				<% end %>
			</div>
		</div>
	</div>
</div>