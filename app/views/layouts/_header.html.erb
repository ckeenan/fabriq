<div id="header">
	<div class="container">
		<div class="row">
			<a href="/main/index" class="logo">
				<div>
					<img src="/assets/fabriq_logo_01.png" />
					<img src="/assets/fabriq_logo_02.png" />
					<img src="/assets/fabriq_logo_03.png" />
					<img src="/assets/fabriq_logo_04.png" />
				</div>
				<h1>Fabriq</h1>
			</a>		
			<div class="admin-panel">
				<% if signed_in? %><a href="/users/<%= current_user.id %>">Hello, <%= current_user.name %></a><% end %>
				<a href="/main/explore">Explore</a>
				<a href="/main/about">About Fabriq</a>
				<a href="/main/invite">Invite Others</a>
				<% if signed_in? %>	        
				    <%= link_to "Log out", signout_path, id: "logout", method: "delete", class: 'login' %>
				<% else %>
					<a href="/signin" class="login">Log In</a>
				<% end %>
			</div>
		</div>
	</div>
	<div id="pending" class="container" style="width: 280px; opacity: 0.7; text-align:center; font-style:italic;">
		<div id="basePending" style="display:none;">
			<!--<span class="three-quarters-loader" style="display: none;"></span> -->
			<span class="three-quarters-loader" ></span> 
			<span class="glyphicon glyphicon-ok" style="color: green; display: none;"></span>
			<span class="glyphicon glyphicon-remove" style="color: red; display: none;"></span>
			<span class="pending-msg">
			</span>
		</div>
	</div>
</div>
