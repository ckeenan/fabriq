<div id="contact-form">
  <%= form_for(@newsletter) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="row">
      <div class="col-md-6">
        <%= f.label "Email" %><br>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="col-sm-6">
        <%= f.submit "Send Message", class: "save button" %>
      </div>
    </div>
  <% end %>
</div>