<div id="signup">
	<div class="container edit-container">
		<div class="row">
			<div class="heading col-md-4 col-md-offset-4">
				<h1>Sign In</h1>
				<p><em>Don't have a persona? </em><a href="/users/new" class="login">Sign up here</a></p>
			</div>
		</div>
		<div class="row">
			<div class="form col-sm-4 col-sm-offset-4">
				<div class="button-container">
					<div class="result">
					</div>
					<dl>
						<dt>
							username
						</dt>
						<dd>
							<%= tag "input", {"id"=> "signin_name", "type" => "text" } %>
						</dd>
						<dt>
							password
						</dt>
						<dd>
							<%= tag "input", {"id"=> "signin_password", "type" => "password"} %>
						</dd>
					</dl>
					<%= tag "input", {"id"=> "signin", "type" => "button", "value" => "Sign in", "class" => "save button"} %>
				</div>
			</div>
		</div>
	</div>
</div>
